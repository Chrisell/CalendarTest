<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :starttime %>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :endtime %>
    <%= f.datetime_select :end %>
  </div>
  <div class="field">
    <%= f.label :all_day %>
    <%= f.check_box :all_day %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :cols => 400, :rows => 20 %>
  </div>
  <div class="field">
    <%= f.label :event_series_id %>
    <%= f.number_field :event_series_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
